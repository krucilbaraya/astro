---
const { node } = Astro.props;
import { Image, Picture } from '@astrojs/image/components';
import {getImage } from '@astrojs/image'
import * as cheerio from 'cheerio';
const $ = cheerio.load(node.content,null,false);
const attribute = {}

const images = $('img').toArray()
for(let image of images){
    const src = await getImage({src: image.attribs.src, format: 'webp',width:"300" , height:"auto"})
    attribute[image.attribs.src] = src
}
let html
$('img').each( function(i){
    const src = attribute [$(this).attr('src')]
    $(this).attr('src', src.src)
$(this).attr('decoding', 'asynchronous')
if(i>1){
    $(this).attr('loading', 'lazy')
}else{
    $(this).attr('fetchpriority', 'high') 
}
})
    html = $.html()

--- 

 <article set:html={html}>
